@using sellyourcar.Models

@model List<DatabaseViewModel>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Create"> <big style="font-size:1em;">+</big>
                Create new Dairy entry</a>
        </div>

        <div class="col-6 text-end">
            <h2>Dairy Entries</h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@entry.Id">Edit</a> | <a
                            asp-controller="Home" asp-action="Delete" asp-route-id="@entry.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
